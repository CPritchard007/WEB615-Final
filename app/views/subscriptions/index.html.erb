<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Subscriptions</h1>
        <%= will_paginate @subscriptions %>
      </div>

      <table class="table table-hover">
        <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @subscriptions.each do |subscription| %>
          <tr>
            <td><%= subscription.publication.name %></td>
            <% if policy(subscription).show? %>
              <td><%= link_to 'Show', subscription %></td>
            <% end %>
            <% if policy(subscription).edit? %>
              <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
            <% end %>
            <% if policy(subscription).destroy? %>
              <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="panel-footer">
        <% if policy(Subscription).new? %>
          <%= link_to 'New Subscription', new_subscription_path, class: 'btn btn-success' %>
        <% end %>
        <%= page_entries_info @subscriptions %>
      </div>

    </div>
  </div>
</div>
